@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (Context?.User.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" role="button">Olá @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form method="post" class="form-inline" asp-area="" asp-controller="Autenticacao" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Autenticacao" asp-action="Login">Login</a>
        </li>
    }
</ul>
